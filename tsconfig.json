{
  "compilerOptions": {
    "lib": [
      "es2022"
    ],
    "module": "commonjs",
    "target": "es2022",
    "outDir": "dist",
    // "strict": true,
    "allowJs": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "stripInternal": true, // 启用 /** @internal */ 标记的剔除
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "declaration": true,
    "declarationDir": "./types"
  },
  "include": [
    "src",
  ]
}